@model TrungTamDaoTao.Models.DangKyKhoaHoc

@{
    ViewData["Title"] = "Xóa đăng ký khóa học";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    Bạn chắc chắn muốn hủy đăng ký khóa học này?
</div>

<div class="form-group">
    <label>Học viên:</label>
    <p>@Model.HocVien.HoTen</p>
</div>

<div class="form-group">
    <label>Khóa học:</label>
    <p>@Model.KhoaHoc.TenKhoaHoc</p>
</div>

<div class="form-group">
    <label>Ngày đăng ký:</label>
    <p>@Model.NgayDangKy.ToString("dd/MM/yyyy")</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Xóa đăng ký</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy bỏ</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
