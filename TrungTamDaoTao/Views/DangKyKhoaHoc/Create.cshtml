@model TrungTamDaoTao.ViewModels.DangKyKhoaHocViewModel

@{
    ViewData["Title"] = "Đăng ký khóa học";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="MaHocVien"></label>
        <select asp-for="MaHocVien" asp-items="Model.HocViens" class="form-control"></select>
        <span asp-validation-for="MaHocVien" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaKhoaHoc"></label>
        <select asp-for="MaKhoaHoc" asp-items="Model.KhoaHocs" class="form-control"></select>
        <span asp-validation-for="MaKhoaHoc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgayDangKy"></label>
        <input asp-for="NgayDangKy" class="form-control" />
        <span asp-validation-for="NgayDangKy" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>

<a href="@Url.Action("Index")">Quay lại</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
