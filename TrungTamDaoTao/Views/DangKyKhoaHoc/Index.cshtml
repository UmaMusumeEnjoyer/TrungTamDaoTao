@model IEnumerable<TrungTamDaoTao.Models.DangKyKhoaHoc>

@{
    ViewData["Title"] = "Danh sách đăng ký khóa học";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Đăng ký mới</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Học viên</th>
            <th>Khóa học</th>
            <th>Ngày đăng ký</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted">Không có dữ liệu</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.HocVien?.HoTen</td>
                    <td>@item.KhoaHoc?.TenKhoaHoc</td>
                    <td>@item.NgayDangKy.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Delete" asp-route-maHocVien="@item.MaHocVien" asp-route-maKhoaHoc="@item.MaKhoaHoc"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Bạn có chắc muốn xóa đăng ký này?');">
                            Xóa
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
