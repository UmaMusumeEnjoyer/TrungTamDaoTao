@{
    ViewData["Title"] = "Doanh Thu Khóa Học";
}

<!-- Phần Header - Tiêu đề trang -->
<section class="hero-section text-center bg-success text-white py-5">
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <p class="lead">Theo dõi doanh thu từ các khóa học đã đăng ký của học viên</p>
    </div>
</section>

<!-- Phần chính - Danh sách doanh thu của các khóa học -->
<section class="container mt-5">
    <h3 class="text-center mb-4">Danh sách Doanh Thu Các Khóa Học</h3>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Tên khóa học</th>
                <th>Giảng viên</th>
                <th>Học phí</th>
                <th>Số học viên hiện tại</th>
                <th>Doanh thu</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var khoaHoc in Model)
            {
                <tr>
                    <td>@khoaHoc.TenKhoaHoc</td>
                    <td>@khoaHoc.GiangVien</td>
                    <td>@khoaHoc.HocPhi.ToString("C0")</td>
                    <td>@khoaHoc.SoLuongHocVienHienTai</td>
                    <td>@khoaHoc.DoanhThu.ToString("C0")</td>
                </tr>
            }
        </tbody>
    </table>
</section>


