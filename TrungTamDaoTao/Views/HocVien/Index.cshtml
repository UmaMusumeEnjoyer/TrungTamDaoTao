@model IEnumerable<User>

@{
    ViewData["Title"] = "Danh Sách Học Viên";
}

<div class="container mt-4">
    <div class="row pt-4">
        <div class="col pt-6">
            <h2 class="text-primary">Danh Sách Học Viên</h2>
        </div>
        <div class="col pt-6 text-end">
            <a asp-controller="HocVien" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-plus"></i> &nbsp; Thêm học viên
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Tên học viên</th>
                <th>Ngày sinh</th>
                <th>Số điện thoại</th>
                <th>Email</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.HoTen</td>
                    <td>@obj.NgaySinh?.ToString("dd/MM/yyyy")</td>
                    <td>@obj.SoDienThoai</td>
                    <td>@obj.Email</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="HocVien" asp-action="Edit" asp-route-id="@obj.MaHocVien" class="btn btn-warning">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a asp-controller="HocVien" asp-action="Delete" asp-route-id="@obj.MaHocVien" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
